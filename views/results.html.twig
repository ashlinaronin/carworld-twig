<html>
    <head>
        <title>Here is your stuff</title>
        <link rel='stylesheet' href='https://maxcdn.bootstrapcdn.com/bootstrap/3.3.1/css/bootstrap.min.css'>
        {# redirect to give idiotic buyer another chance after 1.5 seconds #}
        <meta http-equiv="refresh" content="1.5; URL='/buy'" />
    </head>
    <body>
        <div class='container'>
            {% if search_results is not empty %}
                <h1>Here are the cars you will like:</h1>
                <ul>
                    {% for car in search_results %}
                    {# This syntax gives twig access to the class Car's
                     private properties #}
                        <li><strong>{{Car.getMake}}</strong></li>
                        <li>${{Car.getPrice}}</li>
                        <li>Miles: {{Car.getMiles}}</li>
                        <li>{{Car.getImagePath}}</li>
                    {% endfor %}
                </ul>
            {% else %}
                <h3>Please re-evaluate your expectations.</h3>
            {% endif %}
        </div>
    </body>
</html>
