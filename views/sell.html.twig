<html>
    <head>
        <title>Sell Yer Car</title>
        <link rel='stylesheet' href='https://maxcdn.bootstrapcdn.com/bootstrap/3.3.1/css/bootstrap.min.css'>
    </head>
    <body>
        <div class='container'>
            <h3>Add your car or whatever</h3>
            <form action='/car_added' method='post'>

                <div class='row'>
                    <div class='form-group'>
                        <div class='col-md-2'>
                            <label for='make_model'>Make/Model</label>
                        </div>
                        <div class='col-md-6'>
                            <input id='make_model' name='make_model' type='text'>
                        </div>
                    </div>
                </div>
                <div class='row'>
                    <div class='form-group'>
                        <div class='col-md-2'>
                            <label for='price'>Doll Hairs ($)</label>
                        </div>
                        <div class='col-md-6'>
                            <input id='price' name='price' type='number'>
                        </div>
                    </div>
                </div>
                <div class='row'>
                    <div class='form-group'>
                        <div class='col-md-2'>
                            <label for='miles'>Current Mileage (mi)</label>
                        </div>
                        <div class='col-md-6'>
                            <input id='miles' name='miles' type='number'>
                        </div>
                    </div>
                </div>
                <div class='form-group'>
                    <label for='image_path'>A photo of your "car"</label>
                    <input type='file' name='image_path' id='image_path' accept='image/*'>
                    <input type='submit'>
                </div>

